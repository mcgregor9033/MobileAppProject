<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_gravity="center"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/hiragana_button"
        android:text="@string/hiragana_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_below="@+id/hiragana_button"
        android:id="@+id/katakana_button"
        android:text="@string/katakana_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_below="@+id/katakana_button"
        android:id="@+id/kanji_button"
        android:text="@string/kanji_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_below="@+id/kanji_button"
        android:id="@+id/game_button"
        android:text="@string/game_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
