<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--local copy of android:theme:Holo-->
    <style name="Theme_Holo_Dialog_Alert" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle_Holo</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

    <style name="DialogWindowTitle_Holo">
        <item name="android:maxLines">2</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.DialogWindowTitle</item>
    </style>

    <!-- =============================================================== -->
    <!-- Black styles -->
    <!-- =============================================================== -->

    <style name="title_black" parent="@style/DialogWindowTitle_Holo">
        <item name="android:textAppearance">@style/title_font_black</item>
    </style>

    <style name="actionbar_black" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:background">@color/black_dark</item>
        <item name="android:textColor">@color/black_light</item>
    </style>

    <style name="title_font_black" parent="@android:style/TextAppearance.Holo.DialogWindowTitle">
        <item name="android:textColor">@color/black_light</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_black" parent="@android:style/Widget.Holo.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:textSize">@dimen/quiz_word_top_margin</item>
        <item name="android:background">@color/black_dark</item>
    </style>

    <style name="buttonbar_black" parent="@android:style/Holo.ButtonBar.AlertDialog">
        <item name="android:background">@color/black_dark</item>
    </style>

    <style name="dialog_black" parent="@style/Theme_Holo_Dialog_Alert">
        <item name="android:windowTitleStyle">@style/title_black</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:borderlessButtonStyle">@style/button_black</item>
        <item name="android:buttonBarStyle">@style/buttonbar_black</item>
    </style>

    <style name="radio_black" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:textColor">@color/black_light</item>
        <item name="android:background">@color/black_dark</item>
        <item name="android:textSize">15pt</item>
    </style>

