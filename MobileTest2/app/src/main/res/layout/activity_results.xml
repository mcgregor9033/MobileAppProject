<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_gravity="center"
    tools:context="edu.uco.termproject.mobiletest2.ResultsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RESULTS"
        android:textSize="60sp"
        android:gravity="top|center"
        android:id="@+id/results"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/holo_orange_light"
        android:layout_below="@id/results"
        android:id="@+id/line"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="grade"
        android:layout_marginTop="40sp"
        android:layout_below="@id/line"
        android:textSize="40sp"
        android:gravity="top"
        android:id="@+id/grade"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NULL"
        android:layout_marginTop="30sp"
        android:layout_below="@id/line"
        android:layout_toRightOf="@+id/grade"
        android:layout_marginLeft="30sp"
        android:textSize="60sp"
        android:gravity="top"
        android:id="@+id/letter"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="right"
        android:layout_marginTop="38sp"
        android:layout_below="@id/grade"
        android:textSize="40sp"
        android:gravity="top"
        android:id="@+id/right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NULL"
        android:layout_below="@id/letter"
        android:layout_marginTop="15sp"
        android:layout_toRightOf="@+id/grade"
        android:layout_marginLeft="30sp"
        android:textSize="60sp"
        android:gravity="top"
        android:id="@+id/num_right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="wrong"
        android:layout_marginTop="38sp"
        android:layout_below="@id/right"
        android:textSize="40sp"
        android:gravity="top"
        android:id="@+id/wrong"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NULL"
        android:layout_marginTop="15sp"
        android:layout_below="@id/num_right"
        android:layout_toRightOf="@+id/grade"
        android:layout_marginLeft="30sp"
        android:textSize="60sp"
        android:gravity="top"
        android:id="@+id/num_wrong"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="score"
        android:layout_marginTop="38sp"
        android:layout_below="@id/wrong"
        android:textSize="40sp"
        android:gravity="top"
        android:id="@+id/score"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NULL"
        android:layout_below="@id/num_wrong"
        android:layout_marginTop="15sp"
        android:layout_toRightOf="@+id/grade"
        android:layout_marginLeft="30sp"
        android:textSize="60sp"
        android:gravity="top"
        android:id="@+id/num_score"/>
</RelativeLayout>
