<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_gravity="center"
    android:background="#2E2E2E"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout">

        <ImageButton
            android:layout_width="380dp"
            android:layout_height="366dp"
            android:id="@+id/title_screen"
            android:scaleType="fitCenter"
            android:layout_centerInParent="true"
            android:src="@drawable/hang"
            android:cropToPadding="false" />
        <TextView
            android:id="@+id/word_to_be_guessed_text_view_debugging"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/word_to_be_guessed_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="left" />


        <EditText
            android:id="@+id/player_input_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:maxLength="1"
            android:layout_gravity="center_horizontal"
            android:inputType="textNoSuggestions" />

        <Button
            android:id="@+id/check_guess_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_guess"
            android:layout_gravity="center_horizontal"/>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/play_again_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/play_again_button"
                android:visibility="invisible"
                android:layout_gravity="center_horizontal"
                android:gravity="bottom" />
            <Button
                android:id="@+id/quit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quit_button"
                android:visibility="invisible"
                android:layout_gravity="center_horizontal"
                android:gravity="right" />



        </LinearLayout>


    </LinearLayout>



</RelativeLayout>
