<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.uco.termproject.mobiletest2.NotebookActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtWord"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/menu_button"
            android:text="Your Notebook to Remember"/>

        <RadioGroup
            android:id="@+id/notebook_radio_button_group"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/word_margin">

            <RadioButton
                android:id="@+id/hiragana_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hiragana"/>

            <RadioButton
                android:id="@+id/katakana_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Katakana"/>

            <RadioButton
                android:id="@+id/kanji_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kanji"/>
        </RadioGroup>
        <Button
            android:id="@+id/btn_get_text"
            android:text="Get Word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <TextView
        android:id="@+id/txtHira"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:visibility="invisible" />
    <TextView
        android:id="@+id/txtKata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:visibility="invisible" />
    <TextView
        android:id="@+id/txtKanji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:visibility="invisible" />

</RelativeLayout>
